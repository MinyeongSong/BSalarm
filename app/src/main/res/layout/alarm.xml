<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smy.night.alarm.Alarm">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/alarmtxt"
        android:textAlignment="center"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <Spinner
        android:id="@+id/spt"
        android:layout_width="235dp"
        android:layout_height="53dp"
        android:spinnerMode="dialog"
        android:layout_below="@+id/alarmtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Spinner>

    <Button
        android:id="@+id/btnA"
        android:text="알람설정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/alarmtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:text="알람취소"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/alarmtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/min"
        android:maxLength="3"
        android:inputType="number"
        android:visibility="invisible"
        android:layout_below="@+id/alarmtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/tmin"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/min"
        android:text="분 전"
        android:layout_alignBottom="@+id/min"
        android:gravity="left"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:textColor="#000000"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/min"/>


</RelativeLayout>
